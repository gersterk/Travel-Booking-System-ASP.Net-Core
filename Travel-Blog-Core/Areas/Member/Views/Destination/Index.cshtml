@using EntityLayer.Concrete
@model List<Destination>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Active Tours</h1>

<table class="table table-bordere">
    <tr>
        <th>#</th>
        <th>City</th>
        <th>Duration</th>
        <th>Capacity</th>
        <th>Price</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.City</td>
            <td>@item.DayNight</td>
            <td>@item.Capacity</td>
            <td>@item.Price €</td>
            <td><a href="#" class ="btn btn-outline-info">Details</a></td>
        </tr>
        
    }
</table>

